<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/mapViewJourneyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    
    <FrameLayout
    android:id="@+id/mapViewJourneyBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:padding="3dp"
    android:background="@drawable/button_borders" >

		<ImageView
		    android:id="@+id/mapViewJourneyBtnIcon"
		    android:layout_width="38dp"
		    android:layout_height="38dp"
		    android:src="@drawable/car_icon" />

		<TextView 
			android:id="@+id/mapViewJourneyBtnText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="Message the driver"
			android:layout_marginLeft="40dp"
			android:layout_marginTop="9dp"/>  
	</FrameLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <com.google.android.maps.MapView
            android:id="@+id/mapViewJourneyMapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:apiKey="@string/maps_api_key"
            android:clickable="true"
            android:enabled="true" />

        <ProgressBar
            android:id="@+id/mapViewJourneyProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>

