<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:shrinkColumns="*"
    android:stretchColumns="*" >

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        
        <ImageView
            android:id="@+id/startScreenLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_span="3"
            android:src="@drawable/project_logo_small" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:maxHeight="100dp" >

        <ImageView
            android:id="@+id/startScreenProfilePicture"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:src="@drawable/facebook_logo" />

        <TextView
            android:id="@+id/startScreenProfileName"
            android:layout_width="180dp"
            android:text="NAVN:"
            android:textStyle="bold"
            android:typeface="serif" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <Button
            android:id="@+id/startScreenDrive"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_span="3"
            android:drawableRight="@drawable/car_icon_small"
            android:text="Schedule Drive" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/startScreenHitchhike"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_span="3"
            android:drawableRight="@android:drawable/ic_menu_add"
            android:text="Hitch a Ride" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false" >

        <Button
            android:id="@+id/startScreenInbox"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_span="3"
            android:drawableRight="@android:drawable/ic_menu_info_details"
            android:text="Notifications" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/startScreenMyTrips"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_span="3"
            android:drawableRight="@android:drawable/ic_menu_info_details"
            android:text="My Trips" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/startScreenMyAccount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_span="3"
            android:drawableRight="@android:drawable/ic_menu_info_details"
            android:text="My Account" />

    </TableRow>

</TableLayout>