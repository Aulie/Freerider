<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >

<LinearLayout
    android:id="@+id/tableRow4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

<!-- The banner -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/startScreenLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/project_logo_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <!-- Facebook profile picture -->

        <ImageView
            android:id="@+id/startScreenProfilePicture"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.47"
            android:src="@drawable/facebook_logo" />

        <TextView
            android:id="@+id/startScreenProfileName"
            android:layout_width="180dp"
            android:layout_height="86dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="NAVN:"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/startScreenDrive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/car_icon_small"
            android:drawablePadding="-50dp"
            android:paddingLeft="10dp"
            android:text="Schedule Drive" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/startScreenHitchhike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@android:drawable/ic_menu_add"
            android:drawablePadding="-50dp"
            android:paddingLeft="10dp"
            android:text="Hitch a Ride" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/startScreenInbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="-50dp"
            android:paddingLeft="10dp"
            android:text="Notifications" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow5"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/startScreenMyTrips"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="-50dp"
            android:paddingLeft="10dp"
            android:text="My Trips" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableRow6"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/startScreenMyAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:drawableLeft="@android:drawable/ic_menu_info_details"
            android:drawablePadding="-50dp"
            android:paddingLeft="10dp"
            android:text="My Account" />

    </LinearLayout>
</LinearLayout>

</RelativeLayout>