<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tabhost"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TabWidget android:id="@android:id/tabs"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    />
    <FrameLayout android:id="@android:id/tabcontent"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      
      <FrameLayout android:id="@+id/ride_tab"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        >
       	<LinearLayout android:id="@+id/mapViewPickupLayoutTop"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        	<LinearLayout 
        	android:id="@+id/mapViewDateAndSeatsLayout"
        	android:layout_width="fill_parent"
        	android:layout_height="40dp"
        	android:orientation="horizontal"
        	>

	        	<TextView
	        	    android:id="@+id/mapViewPickupTextViewDate"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="fill_parent"
	        	    android:layout_gravity="left"
	        	    android:layout_weight="1"
	        	    android:textSize="15sp"
	        	    android:text="[DATE]" />
 
        	    <TextView
        	        android:id="@+id/mapViewPickupTextViewSeats"
        	        android:layout_width="match_parent"
        	        android:layout_height="fill_parent"
        	        android:layout_gravity="right"
        	        android:layout_weight="1"
        	        android:textSize="15sp"
        	        android:text="[SEATS]" />
 
        	</LinearLayout>
        	
        	<LinearLayout 
        	android:id="@+id/mapViewPickupDropoffLayout"
        	android:layout_width="fill_parent"
        	android:layout_height="40dp"
        	android:orientation="horizontal"
        	>
	       		<Button
	            android:id="@+id/mapViewPickupBtnPickup"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:text="@string/mapViewPickupBtnPickup" 
	            android:layout_gravity="left"
	            android:layout_marginRight="2dp"
	            android:layout_weight="1"
	            />
	        	<Button
	            android:id="@+id/mapViewPickupBtnDropoff"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:text="@string/mapViewPickupBtnDropoff" 
	            android:layout_gravity="right"
	            android:layout_marginLeft="2dp"
	            android:layout_weight="1"
	            />
			</LinearLayout>
       		<LinearLayout
           	android:layout_width="fill_parent"
          	android:layout_height="250dp"
          	android:orientation="vertical"
          	>
           	<com.google.android.maps.MapView
           	    android:id="@+id/mapViewPickupAndDropoffMapView"
           	    android:layout_width="fill_parent"
           	    android:layout_height="0dp"
           	    android:apiKey="@string/maps_api_key"
           	    android:clickable="true"
           	    android:enabled="true" 
           	    android:layout_weight="1"/>

           	<ProgressBar
               android:id="@+id/mapViewPickupProgressBar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:visibility="gone"/> 

       		</LinearLayout>

       		<LinearLayout
           	android:layout_width="fill_parent"
          	android:layout_height="0dp"
          	android:orientation="vertical" 
           	android:layout_weight="10">

	           <EditText 
	               android:id="@+id/mapViewPickupEtComment"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content"
	               android:hint="@string/mapViewPickupEtComment" 
	               android:textSize="15sp"
	               android:layout_weight="1"
	               />
	           <Button
	               android:id="@+id/mapViewPickupBtnSendRequest"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content"
	               android:text="@string/mapViewPickupBtnSendRequest" 
	               android:layout_weight="1"
	               />
       		</LinearLayout>
   		</LinearLayout>
     	
      </FrameLayout>
      
      <LinearLayout android:id="@+id/driver_tab"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
     	<LinearLayout
        android:id="@+id/mapViewPickupDriverLayoutTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        	<ImageView 
            android:id="@+id/mapViewPickupImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/facebook_logo"
            android:scaleType="centerCrop"
            />
        
        	<LinearLayout
        	android:id="@+id/mapViewPickupDriverInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" 
			>
			
				<TextView 
			    android:id="@+id/mapViewPickupTextViewName"
			    android:layout_height="20dp"
			    android:layout_width="fill_parent"
			    android:layout_weight="1"
			    android:textSize="15sp"
			    android:text="[NAME]"
			    />
				<TextView 
			    android:id="@+id/mapViewPickupTextViewAge"
			    android:layout_height="20dp"
			    android:layout_width="fill_parent"
			    android:layout_weight="1"
			    android:textSize="15sp"
			    android:text="[AGE]"
			    />
				<TextView 
			    android:id="@+id/mapViewPickupTextViewGender"
			    android:layout_height="20dp"
			    android:layout_width="fill_parent"
			    android:layout_weight="1"
			    android:textSize="15sp"
			    android:text="[GENDER]"
			    />
			</LinearLayout>
        </LinearLayout>

        <TextView 
		    android:id="@+id/mapViewPickupTextViewMobile"
		    android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[MOBILE]"
		    android:textSize="15sp"
	 	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewBreaks"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[BREAKS]"
		    android:textSize="15sp"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewAnimals"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[ANIMALS]"
		    android:textSize="15sp"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewMusic"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[MUSIC]"
		    android:textSize="15sp"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewTalking"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[TALKING]"
		    android:textSize="15sp"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewSmoking"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[SMOKING]"
		    android:textSize="15sp"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewCar"
     		android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:text="[THE CAR]"
		    android:textSize="15sp"
      	/>
      </LinearLayout>
    </FrameLayout>
  </LinearLayout>
</TabHost>