<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tabhost"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TabWidget
        android:id="@android:id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <FrameLayout android:id="@android:id/tabcontent"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">
      
      <FrameLayout android:id="@+id/ride_tab"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        >
       	<LinearLayout android:id="@+id/mapViewPickupLayoutTop"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        	<LinearLayout 
        	android:id="@+id/mapViewDateAndSeatsLayout"
        	android:layout_width="fill_parent"
        	android:layout_height="40dp"
        	android:orientation="horizontal"
        	>

	        	<TextView
	        	    android:id="@+id/mapViewPickupTextViewDate"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_gravity="left"
	        	    android:layout_weight="1"
	        	    android:textSize="15sp"
	        	    android:text="[DATE]" />
 
        	    <TextView
        	        android:id="@+id/mapViewPickupTextViewSeats"
        	        android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="right"
        	        android:layout_weight="1"
        	        android:textSize="15sp"
        	        android:text="[SEATS]" />
 
        	</LinearLayout>
        	
        	<LinearLayout 
        	android:id="@+id/mapViewPickupDropoffLayout"
        	android:layout_width="fill_parent"
        	android:layout_height="40dp"
        	android:orientation="horizontal"
        	>
	       		<Button
	            android:id="@+id/mapViewPickupBtnPickup"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:text="@string/mapViewPickupBtnPickup" 
	            android:layout_gravity="left"
	            android:layout_marginRight="2dp"
	            android:layout_weight="1"
	            android:background="@drawable/list_selector"
	            />
	        	<Button
	            android:id="@+id/mapViewPickupBtnDropoff"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:text="@string/mapViewPickupBtnDropoff" 
	            android:layout_gravity="right"
	            android:layout_marginLeft="2dp"
	            android:layout_weight="1"
	            android:background="@drawable/list_selector"
	            />
			</LinearLayout>
       		<LinearLayout
           	android:layout_width="fill_parent"
          	android:layout_height="250dp"
          	android:orientation="vertical"
          	>
           	<com.google.android.maps.MapView
           	    android:id="@+id/mapViewPickupAndDropoffMapView"
           	    android:layout_width="fill_parent"
           	    android:layout_height="0dp"
           	    android:apiKey="@string/maps_api_key"
           	    android:clickable="true"
           	    android:enabled="true" 
           	    android:layout_weight="1"/>

           	<ProgressBar
               android:id="@+id/mapViewPickupProgressBar"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:visibility="gone"/> 

       		</LinearLayout>

       		<LinearLayout
           	android:layout_width="fill_parent"
          	android:layout_height="fill_parent"
          	android:orientation="vertical" 
           	>

	           <EditText 
	               android:id="@+id/mapViewPickupEtComment"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content"
	               android:hint="@string/mapViewPickupEtComment" 
	               android:textSize="15sp"
	               />
	           <Button
	               android:id="@+id/mapViewPickupBtnSendRequest"
	               android:layout_width="fill_parent"
	               android:layout_height="wrap_content"
	               android:text="@string/mapViewPickupBtnSendRequest" 
	               android:background="@drawable/list_selector"
	               />
       		</LinearLayout>
   		</LinearLayout>
     	
      </FrameLayout>
      
      <!-- Driver tab layout -->
      <LinearLayout android:id="@+id/driver_tab"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
     	<LinearLayout
        android:id="@+id/mapViewPickupDriverLayoutTop"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
			
        	<ImageView 
            android:id="@+id/mapViewPickupImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook_logo"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            />
        
        	<LinearLayout
        	android:id="@+id/mapViewPickupDriverInfoLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
			>
			
				<TextView 
			    android:id="@+id/mapViewPickupTextViewName"
			    android:layout_height="20dp"
			    android:layout_width="fill_parent"
			    android:layout_weight="1"
			    android:layout_margin="10dp"
			    android:textSize="15sp"
			    />
				<TextView 
			    android:id="@+id/mapViewPickupTextViewAge"
			    android:layout_height="20dp"
			    android:layout_width="fill_parent"
			    android:layout_weight="1"
			    android:textSize="15sp"
			    android:text="[AGE]"/>
				
				<ImageView
			    android:id="@+id/gender"
			    android:layout_height="20dp"
			    android:layout_width="wrap_content"
			    android:gravity="left"
			    android:scaleX="1.5"
			    android:scaleY="1.5"
			    android:layout_marginLeft="10dp"
			    android:layout_marginBottom="10dp"
			    android:layout_weight="1" />
			</LinearLayout>
        </LinearLayout>

        <TextView
		      android:id="@+id/phone"
		      android:layout_width="fill_parent"
		      android:layout_height="wrap_content"
		      android:ems="15"
		      android:hint="phone"
		      android:background="@drawable/list_selector" >

		  </TextView>

        <TextView
        	android:id="@+id/mapViewPickupTextViewBreaks"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[BREAKS]"
		    android:textSize="15sp"
		    android:background="@drawable/list_selector"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewAnimals"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[ANIMALS]"
		    android:textSize="15sp"
		    android:background="@drawable/list_selector"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewMusic"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[MUSIC]"
		    android:textSize="15sp"
		    android:background="@drawable/list_selector"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewTalking"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[TALKING]"
		    android:textSize="15sp"
		    android:background="@drawable/list_selector"
      	/>
        <TextView
        	android:id="@+id/mapViewPickupTextViewSmoking"
     		android:layout_width="fill_parent"
		    android:layout_height="20dp"
		    android:text="[SMOKING]"
		    android:textSize="15sp"
		    android:background="@drawable/list_selector"
      	/>
        <ImageView
            android:id="@+id/mapViewPickupTextViewCar"
            android:layout_width="fill_parent"
            android:layout_height="101dp"
            android:src="@drawable/car" >
</ImageView>

		<RelativeLayout
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent" >

		  <RatingBar
		      android:id="@+id/ratingBar2"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:layout_centerHorizontal="true"
		      android:layout_centerVertical="true"
		      android:isIndicator="true"
		      android:numStars="5"
		      android:rating="3"
		      android:scaleX="0.5"
		      android:scaleY="0.5" />

		  <TextView
		      android:id="@+id/mapViewPickupAndDropoffComfort"
		      android:layout_width="fill_parent"
		      android:layout_height="20dp"
		      android:layout_alignParentRight="true"
		      android:layout_centerVertical="true"
		      android:layout_margin="10dp"
		      android:text="Comfort:"
		      android:textSize="15sp" />

			</RelativeLayout>
      </LinearLayout>
    </FrameLayout>
  </LinearLayout>
</TabHost>